<Window x:Class="DebtBook.ViewModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModel="clr-namespace:DebtBook.ViewModel"
        mc:Ignorable="d"
        Title="Dept Book" Height="350" Width="525">
    <Grid>
        <Label Content="Debt book" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="39,18,414.429,277.143"/>
        <Button Content="Add Person" HorizontalAlignment="Center" Margin="0,275,0,0" VerticalAlignment="Top" Width="75"/>
        <StackPanel Height="203" Margin="0,49,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="434">
            <Label Content="Persons"/>
            <ListBox Height="177" Margin="0,0,0.286,0" ItemsSource="{Binding Path=List, Mode=OneWay}" ItemTemplate="{StaticResource personName}"/>
        </StackPanel>
        
        <Grid.Resources>
            <DataTemplate x:Key="personName">
                <TextBlock Text="{Binding Path=Name}" />
            </DataTemplate> 
        </Grid.Resources>
    </Grid>
    <Window.DataContext>
        
        <ViewModel:MainViewModel />
    </Window.DataContext>

</Window>
