<Window x:Class="DebtBook.ViewModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModel="clr-namespace:DebtBook.ViewModel"
        mc:Ignorable="d"
        Title="Dept Book" Height="350" Width="525"
        ResizeMode="NoResize" >
    <Grid>
        <Button Content="Add Person" HorizontalAlignment="Center" Margin="0,275,0,0" VerticalAlignment="Top" Width="75"/>
        <StackPanel Height="203" Margin="0,49,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="434">
            <ListView ItemsSource="{Binding List}" HorizontalAlignment="Stretch" Height="204" Margin="0" VerticalAlignment="Top" Width="434" RenderTransformOrigin="0.881,6.832" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="217" />
                        <GridViewColumn Header="Debt" DisplayMemberBinding="{Binding calcDebt}" Width="217" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
    <Window.DataContext>
        <ViewModel:MainViewModel />
    </Window.DataContext>

</Window>
